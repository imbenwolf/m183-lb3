#background
    #texture(class="uk-background-image@m")

style.
    #background {
        position: fixed;
        left: 0;
        right: 0;
        background: linear-gradient(to right top, #00d8ce, #00bdeb, #009cff, #0070ff, #4b12eb);
        background-size: 1000%;
        animation: background 10s ease alternate infinite;
        overflow: hidden;
    }

    @keyframes background {
        100% { background-position: 100% 50% }
    }

    #texture {
        min-height: 100vh;
        background: url(/public/img/shapes.svg);
        background-size: contain;
        max-width: 2000px;
        margin: 0 auto;
        background-repeat: no-repeat;
        background-position-y: 25vh;
        animation: texture 20s ease-in-out alternate infinite;
    }

    @keyframes texture { 
        0% { transform: skewY(-4deg) translateY(0px) }
        20% { transform: skewY(4deg) translateY(40px) }
        40% { transform: skewY(4deg) translateY(80px) }
        60% { transform: skewY(0deg) translateY(80px) }
        80% { transform: skewY(4deg) translateY(40px) }
        100% { transform: skewY(4deg) translateY(80px) }
    }