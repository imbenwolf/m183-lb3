extends components/layout.pug

block content
  .uk-border-rounded.uk-card.uk-card-secondary.uk-card-body.uk-box-shadow-large
    h1.uk-card-title.uk-margin-remove-bottom System
    h2.uk-text-meta.uk-margin-remove-top
      if (command && command.trim() && command.length) 
        span command: 
        span#command.uk-text-emphasis= command
        pre.uk-card-secondary= output && output.length ? output : 'No output received...'
      else
        span No command specified

    form#command-form(action="/system", method="get").uk-flex-inline.uk-margin
      #command-input.uk-inline.uk-margin-right.uk-flex-auto.uk-width-1-1(class="uk-margin-small-bottom@s")
        span.uk-form-icon(uk-icon='icon: code')
        input(name="command", type="text").uk-input.uk-form-large.uk-form
      button#command-button.uk-button.uk-button-large.uk-button-default Execute

  style.
    #command {
      word-break: break-all;
    }

    @media (max-width: 960px) {
        #command-form {
            display: block !important;
        }

        #command-form #command-input {
            margin-bottom: 10px;
        }

        #command-form #command-button {
            float: right;
        }
    }